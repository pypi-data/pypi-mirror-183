[Unit]
Description="{{ pine_name }}-melon-web"
PartOf={{ pine_name }}-web.target

[Service]
User={{ user }}
Group={{ user }}
Restart=always
ExecStart={{ pine_dir }}/env/bin/gunicorn -b 127.0.0.1:{{ webserver_port }} -w {{ gunicorn_workers }} -t {{ http_timeout }} melon.app:application --preload
StandardOutput=file:{{ pine_dir }}/logs/web.log
StandardError=file:{{ pine_dir }}/logs/web.error.log
WorkingDirectory={{ sites_dir }}
