{
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "119"
    ],
    "python.linting.pylintArgs": [
        "--max-line-length=119", 
        "--disable=C0103", 
        "--disable=missing-function-docstring", 
        "--disable=missing-class-docstring"
    ]
}